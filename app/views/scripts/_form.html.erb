<%= form_for(script) do |f| %>
  <% if script.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(script.errors.count, "error") %></h2>

      <ul>
      <% script.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, cols: 100, rows: 10 %>
  </div>

  <div class="field">
    <%= f.label :command %>
    <%= f.text_area :command, cols: 100, rows: 15 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
